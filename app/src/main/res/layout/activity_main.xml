<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Introduceți fiecare element pe o linie separată"
        android:importantForAccessibility="yes"
        android:contentDescription="Câmp text pentru listă"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvează lista"
        android:contentDescription="Buton pentru a salva lista introdusă" />

    <Button
        android:id="@+id/btnRandom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alege la întâmplare"
        android:contentDescription="Buton pentru a alege un element la întâmplare" />
</LinearLayout>
